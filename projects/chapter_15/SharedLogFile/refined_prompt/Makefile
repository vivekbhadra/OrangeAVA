# ============================================================
# Project: Refined Shared Log File Example
# Standard: C++20
# ============================================================

CXX      := g++
CXXFLAGS := -std=c++20 -Wall -Wextra -Wpedantic -O2 -pthread

TARGET := refined_logger

SRCS := main.cpp

# ------------------------------------------------------------
# Default target
# ------------------------------------------------------------
.PHONY: all
all: $(TARGET)

# ------------------------------------------------------------
# Build
# ------------------------------------------------------------
$(TARGET): $(SRCS)
	$(CXX) $(CXXFLAGS) $^ -o $@

# ------------------------------------------------------------
# Clean
# ------------------------------------------------------------
.PHONY: clean
clean:
	rm -f $(TARGET)

